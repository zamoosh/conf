{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Django Server",
        "type": "shell",
        "command": "python",
        "args": [
          "manage.py",
          "runserver",
          "0.0.0.0:8000"
        ],
        "group": {
